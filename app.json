{
  "name": "Lotus",
  "description": "Open Source Metering Billing and Pricing",
  "website": "https://www.uselotus.io",
  "repository": "https://github.com/uselotus/lotus",
  "success_url": "/admin",
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {"url": "https://github.com/heroku/heroku-buildpack-python"}
  ],
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "CELERY_BROKER_URL": {
      "value": "redis://redis:6379/"
    },
    "CELERY_RESULT_BACKEND": {
        "value": "redis://redis:6379/"
      },
      "DISABLE_COLLECTSTATIC": {
        "value": "1"
      },
    "DJANGO_SUPERUSER_PASSWORD":{
        "generator": "secret"
  },
  "DJANGO_SUPERUSER_USERNAME":{
      "value": "admin"
  },
  "DJANGO_SUPERUSER_EMAIL":{
    "value": "example@example.com"
    }
  
    },"scripts":{
    "postdeploy":"python manage.py makemigrations home --noinput; python manage.py migrate_schemas; python3 manage.py initadmin"
  }
}